    <ul>
      <table class="table table-bordered table-condensed" >
          <thead>
            <tr><th>id</th><th>bug_date</th><th>cost</th><th>deadline</th><th>owner</th><th>status</th><th>Summary</th></tr>
          </thead>
          <tbody>
            <!-- 关键点：这里使用的是filteredArticles而不是从route获取的model -->
            {{#each filteredArticles as |item|}}
                <!-- {{#link-to 'homepage.detail' item}} {{/link-to}}-->
                <tr><td>{{item.id}}</td>
                <td>{{item.bug_date}}</td>
                <td>{{item.cost}}</td>
                <td>{{item.deadline}}</td>
                <td>{{item.owner}}</td>
                <td>{{item.status}}</td>
                <td>{{item.Summary}}</td></tr>
            {{/each}}
          </tbody>
          </table>
    </ul>
    </div>
</div>
